<%= form_for(@entry,:html=>{:multipart=>true}) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>
      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <% @title = t 'general.form.title' %>
    <%= f.label :title,@title%>
    <br/>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <% @body = t 'general.form.body' %>
    <%= f.label :body,@body%><br/>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <% @public_flag = t 'general.form.public_flag'%>
    <%= f.label :public_flag,@public_flag%><br/>
    <%= f.check_box :public_flag %>
  </div>
  <div class="field">
    <% @entry_point = t 'general.form.point'%>
    <%= f.label :entry_point,@entry_point%><br/>
    <%= f.number_field :point %>
  </div>
  <div>
    <%=link_to image_tag(@entry.image.url(:med)),@entry.image.url %>
  </div>
  <div class="field">
    <%=f.label :image,'图片上传'%>:
    <%=f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit t 'general.form.save'%>
  </div>
<% end %>
